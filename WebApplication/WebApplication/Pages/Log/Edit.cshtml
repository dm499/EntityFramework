@page
@model WebApplication.Pages.Log.EditModel

@{
    ViewData["Title"] = "Update Log";
}

<br />
<h2 class="text-info">Update Log</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TransactionLogs.Id" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="TransactionLogs.Credit" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="TransactionLogs.Credit" class="form-control" />
            </div>
            <span asp-validation-for="TransactionLogs.Credit" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="TransactionLogs.Balance" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="TransactionLogs.Balance" class="form-control" />
            </div>
            <span asp-validation-for="TransactionLogs.Balance" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-outline-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
