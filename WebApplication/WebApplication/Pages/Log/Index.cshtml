@page
@model WebApplication.Pages.Log.IndexModel

@{
    ViewData["Title"] = "Transaction Log";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Transaction Log</h2>
    </div>
</div>

<div class="col-12 border p-3 mt-3">

    <form method="post">
        @if (Model.TransactionLogs.Count() > 0)
        {
            <div class="alert alert-success">
                Available log...
            </div>

            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="TransactionLogs.FirstOrDefault().Credit"></label>
                    </th>
                    <th>
                        <label asp-for="TransactionLogs.FirstOrDefault().Balance"></label>
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.TransactionLogs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Credit)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Balance)
                        </td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <div class="alert alert-danger">
                No available log...
            </div>
        }
    </form>
</div>
