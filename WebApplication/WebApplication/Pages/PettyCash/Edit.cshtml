@page
@model WebApplication.Pages.PettyCash.EditModel

@{
    ViewData["Title"] = "Edit Request";
}

<br />
<h2 class="text-info">Edit Request</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PettyCashRequests.Id" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PettyCashRequests.Date" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="PettyCashRequests.Date" class="form-control" />
            </div>
            <span asp-validation-for="PettyCashRequests.Date" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PettyCashRequests.Description" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="PettyCashRequests.Description" class="form-control" />
            </div>
            <span asp-validation-for="PettyCashRequests.Date" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PettyCashRequests.Amount" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="PettyCashRequests.Amount" class="form-control" />
                <span asp-validation-for="PettyCashRequests.Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PettyCashRequests.CurrencyType" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="PettyCashRequests.CurrencyTypeId" class="form-control" asp-items="ViewBag.CurrencyTypeId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PettyCashRequests.Employee" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="PettyCashRequests.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PettyCashRequests.StatusType" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="PettyCashRequests.StatusTypeId" class="form-control" asp-items="ViewBag.StatusTypeId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Save" class="btn btn-outline-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
