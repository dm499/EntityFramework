@page
@model WebApplication.Pages.Employee.DeleteModel

@{
    ViewData["Title"] = "Delete Employee";
}


    <div class="border container" style="padding:30px;">
        <div class="alert alert-danger" role="alert">
            Are you sure you want to delete this?
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Employees.FirstName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Employees.MiddleName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Employees.LastName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Employees.GenderType)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Employees.Phone)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Employees.Email)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.Employees.FirstName)</td>
                    <td>@Html.DisplayFor(model => model.Employees.MiddleName)</td>
                    <td>@Html.DisplayFor(model => model.Employees.LastName)</td>
                    <td>@Html.DisplayFor(model => model.Employees.GenderType.Name)</td>
                    <td>@Html.DisplayFor(model => model.Employees.Phone)</td>
                    <td>@Html.DisplayFor(model => model.Employees.Email)</td>
                </tr>
            </tbody>
        </table>
        <form method="post">
            <div class="form-group row mt-5">
                <div class="col-2">
                    <input type="hidden" asp-for="Employees.Id" />
                    <input type="submit" value="Delete" class="btn btn-outline-danger form-control" />
                </div>
                <div class="col-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>
