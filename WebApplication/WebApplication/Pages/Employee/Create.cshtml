@page
@model WebApplication.Pages.Employee.CreateModel

@{
    ViewData["Title"] = "Create Employee";
}

<br />
<h2 class="text-info">Create New Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="Employees.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.MiddleName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.MiddleName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.LastName" class="form-control" />
            </div>
            <span asp-validation-for="Employees.LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.GenderType"></label>
            </div>
            <div class="col-6">
                <select asp-for="Employees.GenderTypeId" class="form-control" asp-items="ViewBag.GenderTypeId">
                    <option value="" selected> -- Choose a gender --</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Employees.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.Email" class="form-control" />
            </div>
            <span asp-validation-for="Employees.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-outline-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
