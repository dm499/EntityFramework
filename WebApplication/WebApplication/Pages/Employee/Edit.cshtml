@page
@model WebApplication.Pages.Employee.EditModel

@{
    ViewData["Title"] = "Edit Employee";
}

<br />
<h2 class="text-info">Edit Employee</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Employees.Id" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.FirstName" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.FirstName" class="form-control" />
                <span asp-validation-for="Employees.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.MiddleName" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.MiddleName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.LastName" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.LastName" class="form-control" />
                <span asp-validation-for="Employees.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.GenderType" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="Employees.GenderTypeId" class="form-control" asp-items="ViewBag.GenderTypeId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.Phone" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.Phone" class="form-control" />
                <span asp-validation-for="Employees.Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employees.Email" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Employees.Email" class="form-control" />
                <span asp-validation-for="Employees.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Save" class="btn btn-outline-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
