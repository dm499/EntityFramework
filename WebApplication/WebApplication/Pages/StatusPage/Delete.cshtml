@page
@model WebApplication.Pages.StatusPage.DeleteModel

@{
    ViewData["Title"] = "Delete Status";
}

    <div class="border container" style="padding:30px;">
        <div class="alert alert-danger" role="alert">
            Are you sure you want to delete this?
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.StatusTypes.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.StatusTypes.Description)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.StatusTypes.Name)</td>
                    <td>@Html.DisplayFor(model => model.StatusTypes.Description)</td>
                </tr>
            </tbody>
        </table>
        <form method="post">
            <div class="form-group row mt-5">
                <div class="col-2">
                    <input type="hidden" asp-for="StatusTypes.Id" />
                    <input type="submit" value="Delete" class="btn btn-outline-danger form-control" />
                </div>
                <div class="col-2">
                    <a asp-page="./Index" class="btn btn-outline-secondary">Back</a>
                </div>
            </div>
        </form>
    </div>